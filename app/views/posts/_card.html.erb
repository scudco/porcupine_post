<div class="post-card mb-5 p-2 shadow border">
  <h2 class="text-lg mb-2">
    <%= link_to post.title, post, class: 'text-blue-400 hover:text-blue-300' %>
  </h2>
  <footer class="flex">
    <div class="-mt-2 text-gray-600 flex-grow text-xs">
      <span class="font-serif italic">by</span>
      <%= link_to post.user.name, post.user, class: 'text-blue-400 hover:text-blue-300 uppercase' %>
    </div>
    <div class="text-right text-xs text-muted text-gray-400">
      <%= time_ago_in_words(post.created_at) %> ago
    </div>
  </footer>
</div>
