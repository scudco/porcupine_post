<div class="post-detail">
  <h1 class="text-xl mb-3">
    <%= @post.title %>
  </h1>
  <div class="-mt-3 mb-3">
    <span class="font-serif italic">by</span>
    <span class="text-blue-400 hover:text-blue-300"><%= link_to @post.user.name, user_path(@post.user) %></span>
  </div>

  <div class="leading-relaxed">
    <%= @post.body %>
  </div>

  <ul class="flex items-center mt-5 border-t-2 p-5">
    <li class="mr-5 flex-grow">
      <%= link_to "Edit", edit_post_path(@post), class: 'p-3 bg-blue-400 text-white shadow rounded leading-none text-center' %>
    </li>
    <li>
      <%= button_to "Delete", @post, method: :delete, class: 'p-2 bg-red-400 text-white shadow rounded leading-none text-center' %>
    </li>
  </ul>
</div>
