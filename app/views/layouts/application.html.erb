<!DOCTYPE html>
<html>
  <head>
    <title>PorcupinePost</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if flash.notice %>
      <p><%= flash.notice %></p>
    <% end %>
    <% if flash.alert %>
      <p><%= flash.alert %></p>
    <% end %>

    <h1>Welcome to the Porcupine Post</h1>
    <%= yield %>
  </body>
</html>
